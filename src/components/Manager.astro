---
interface Props {
  team: string;
  manager: string;
  imgUrl?: string;
  description?: string;
}

const { team, manager, imgUrl, description } = Astro.props;
---

<div class="manager-card">
  <div class="card-accent"></div>
  
  <div class="manager-header">
    <div class="manager-info">
      <div class="icon-container">
        <img src={`/fantasy_icons/${team}.png`} alt={`${team} logo`} class="team-logo" />
      </div>
      <div>
        <h2 class="manager-name">{manager}</h2>
        <span class="team-name">{team}</span>
      </div>
    </div>
  </div>
  
  {description && (
    <div class="manager-description">
      <p>{description}</p>
    </div>
  )}
</div>

<style>
  .manager-card {
    position: relative;
    margin-bottom: 2rem;
    background: linear-gradient(135deg, rgba(210, 130, 166, 0.12), rgba(110, 69, 85, 0.08));
    border-radius: 12px;
    overflow: hidden;
    border: 1px solid rgba(210, 130, 166, 0.25);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    backdrop-filter: blur(10px);
  }

  .manager-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(210, 130, 166, 0.25);
    border-color: rgba(210, 130, 166, 0.4);
  }

  .card-accent {
    position: absolute;
    top: 0;
    left: 0;
    width: 5px;
    height: 100%;
    background: linear-gradient(180deg, #E8A5C5, #D282A6, #B86D8F);
  }

  .manager-header {
    padding: 1.5rem;
    padding-left: 2rem;
    background: linear-gradient(90deg, rgba(210, 130, 166, 0.15), transparent);
  }

  .manager-info {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .icon-container {
    width: 70px;
    height: 70px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .team-logo {
    width: 70px;
    height: 70px;
    object-fit: contain;
    filter: drop-shadow(0 2px 8px rgba(210, 130, 166, 0.4));
    border-radius: 8px;
  }

  .manager-name {
    font-size: 1.8rem;
    font-weight: 700;
    margin: 0 0 0.3rem 0;
    color: #F5E6EE;
    text-shadow: 0 2px 8px rgba(210, 130, 166, 0.4);
  }

  .team-name {
    display: inline-block;
    background: linear-gradient(135deg, rgba(210, 130, 166, 0.3), rgba(110, 69, 85, 0.25));
    color: #E8A5C5;
    font-size: 1rem;
    font-weight: 600;
    letter-spacing: 0.5px;
    padding: 0.25rem 0.75rem;
    border-radius: 6px;
    border: 1px solid rgba(210, 130, 166, 0.35);
  }

  .manager-description {
    padding: 0 1.5rem 1.5rem 2rem;
    border-top: 1px solid rgba(210, 130, 166, 0.15);
    margin-top: 0.5rem;
  }

  .manager-description p {
    color: rgba(245, 230, 238, 0.9);
    line-height: 1.7;
    margin: 1rem 0 0 0;
    font-size: 1rem;
  }

  @media (max-width: 600px) {
    .manager-name {
      font-size: 1.4rem;
    }
    
    .icon-container {
      width: 60px;
      height: 60px;
    }

    .team-logo {
      width: 60px;
      height: 60px;
    }
  }
</style>